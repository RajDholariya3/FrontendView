@model List<FrontendView.Models.ProductModel>

@{
    ViewData["Title"] = "My Wishlist";
}

<style>
    body {
        background-color: #ffffff;
        font-family: 'Poppins', sans-serif;
    }

    .product-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        padding: 20px;
        text-align: center;
        position: relative;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .btn-remove {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
        font-size: 16px;
        padding: 8px 20px;
        border-radius: 25px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-remove:hover {
            background: linear-gradient(135deg, #dc2626, #b91c1c);
            transform: translateY(-2px);
        }

    .product-info h5 {
        color: #1e3a8a;
        margin-bottom: 5px;
    }

    .product-info p {
        color: #64748b;
        margin-bottom: 5px;
    }

    .empty-message {
        text-align: center;
        color: #64748b;
        font-size: 18px;
        margin-top: 50px;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-5" style="color: #1e3a8a">❤️ My Wishlist</h2>

    @if (Model.Any())
    {
        <div class="row" id="wishlist-items">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4" data-product-id="@product.ProductId">
                    <div class="product-card">
                        <img src="@product.ImageUrl" alt="@product.Name" class="product-image">
                        <div class="product-info">
                            <h5>@product.BrandName</h5>
                            <p>@product.Name</p>
                            <p>⭐ @product.Price</p>
                            <button class="btn btn-remove remove-from-wishlist" data-id="@product.ProductId">
                                🗑️ Remove
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="empty-message" id="empty-message">Your wishlist is empty. Start adding products you love!</p>
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Handle remove-from-wishlist functionality with AJAX
        document.querySelectorAll(".remove-from-wishlist").forEach(button => {
            button.addEventListener("click", function () {
                let productId = this.getAttribute("data-id");

                fetch('@Url.Action("ToggleWishlist", "Product")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        ProductId: productId
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Remove the product card from the DOM
                            let card = document.querySelector(`[data-product-id='${productId}']`);
                            if (card) {
                                card.remove();
                            }
                            // Check if wishlist is empty
                            let remainingItems = document.querySelectorAll(".product-card").length;
                            if (remainingItems === 0) {
                                let container = document.querySelector(".container");
                                // Remove existing empty message if present to avoid duplicates
                                let existingEmpty = document.getElementById("empty-message");
                                if (existingEmpty) existingEmpty.remove();
                                container.innerHTML += '<p class="empty-message" id="empty-message">Your wishlist is empty. Start adding products you love!</p>';
                            }
                            alert("Removed from wishlist");
                        } else {
                            alert("❌ Failed to remove: " + data.message);
                        }
                    })
                    .catch(error => {
                        console.error("Error:", error);
                        alert("❌ An error occurred while removing the item.");
                    });
            });
        });
    });
</script>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>