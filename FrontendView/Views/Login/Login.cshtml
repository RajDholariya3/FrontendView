@model FrontendView.Models.LoginModel
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Tech Store</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
        
        :root {
            --primary: #0066cc;
            --primary-dark: #0052a3;
            --primary-light: rgba(0, 102, 204, 0.1);
            --text-primary: #2c3e50;
            --text-secondary: #4a5568;
            --text-muted: #64748b;
            --danger: #ef4444;
            --input-bg: #f8fafc;
            --input-border: #e2e8f0;
            --white: #ffffff;
            --gray-50: #f1f5f9;
            --gray-200: #e2e8f0;
        }
        
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--gray-50);
            color: var(--text-primary);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .login-container {
            background: var(--white);
            padding: 35px;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            width: 100%;
            max-width: 420px;
            position: relative;
        }
        
        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), #1a8cff);
            border-radius: 16px 16px 0 0;
        }

        .brand-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 25px;
        }
        
        .brand-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 5px;
        }
        
        .brand-logo i {
            font-size: 28px;
            color: var(--primary);
            margin-right: 10px;
        }
        
        .brand-name {
            font-size: 22px;
            font-weight: 600;
            color: var(--text-primary);
        }

        .store-banner {
            background: var(--gray-50);
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 25px;
            font-size: 14px;
            color: var(--text-secondary);
            border: 1px solid var(--gray-200);
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .store-banner i {
            color: var(--primary);
            margin-right: 8px;
            font-size: 16px;
        }
        
        .banner-highlight {
            color: var(--primary);
            font-weight: 600;
        }

        .welcome-text {
            text-align: center;
            margin-bottom: 25px;
        }
        
        .welcome-text h2 {
            font-size: 20px;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 5px;
        }
        
        .welcome-text p {
            color: var(--text-muted);
            font-size: 14px;
        }

        .input-group {
            margin-bottom: 20px;
            position: relative;
        }

        .input-group label {
            font-size: 14px;
            font-weight: 500;
            display: block;
            margin-bottom: 8px;
            color: var(--text-secondary);
        }

        .label-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
        }
        
        .forgot-password-link {
            font-size: 13px;
            color: var(--primary);
            text-decoration: none;
            transition: 0.2s;
        }
        
        .forgot-password-link:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
        }

        .input-group input {
            width: 100%;
            padding: 14px 14px 14px 40px;
            border: 1px solid var(--input-border);
            border-radius: 8px;
            background: var(--input-bg);
            color: var(--text-primary);
            font-size: 15px;
            outline: none;
            transition: all 0.25s ease;
        }

        .input-group input:focus {
            background: var(--white);
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.15);
        }

        .toggle-password {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: var(--text-muted);
            transition: 0.2s;
            padding: 0;
            font-size: 16px;
        }
        
        .toggle-password:hover {
            color: var(--text-secondary);
        }

        .error-message {
            color: var(--danger);
            font-size: 12px;
            margin-top: 5px;
            display: block;
        }

        .form-check {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 25px;
        }
        
        .form-check input[type="checkbox"] {
            width: 16px;
            height: 16px;
            accent-color: var(--primary);
            cursor: pointer;
        }
        
        .form-check label {
            font-size: 14px;
            color: var(--text-secondary);
            cursor: pointer;
        }

        .login-button {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 8px;
            background: var(--primary);
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s ease;
            box-shadow: 0 4px 6px var(--primary-light);
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
        }

        .login-button:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(0, 102, 204, 0.2);
        }
        
        .login-button:active {
            transform: translateY(0);
            box-shadow: 0 4px 6px var(--primary-light);
        }
        
        .login-button i {
            font-size: 14px;
            transition: 0.3s ease;
        }
        
        .login-button:hover i {
            transform: translateX(3px);
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 25px 0;
            color: var(--text-muted);
            font-size: 13px;
        }
        
        .divider::before, 
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid var(--gray-200);
        }
        
        .divider span {
            padding: 0 15px;
        }

        .social-login {
            margin-bottom: 25px;
        }
        
        .social-button {
            width: 100%;
            padding: 14px;
            border: 1px solid var(--gray-200);
            border-radius: 8px;
            background: var(--white);
            font-size: 15px;
            font-weight: 500;
            color: var(--text-primary);
            cursor: pointer;
            transition: 0.2s ease;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }
        
        .social-button:hover {
            background: var(--gray-50);
            border-color: var(--gray-200);
        }
        
        .social-button i {
            font-size: 18px;
        }
        
        .social-button.google i {
            color: #DB4437;
        }

        .signup-link {
            text-align: center;
            margin-top: 25px;
            font-size: 14px;
            color: var(--text-muted);
        }

        .signup-link a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
            transition: 0.2s;
        }

        .signup-link a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }
        
        @@media (max-width: 480px) {
            .login-container {
                padding: 25px 20px;
            }
            
            .store-banner {
                padding: 10px;
                font-size: 13px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="brand-header">
            <div class="brand-logo">
                <i class="fas fa-laptop"></i>
                <span class="brand-name">Tech Store</span>
            </div>
        </div>
        
        <div class="store-banner">
            <i class="fas fa-truck"></i>
            Latest laptops and electronics with <span class="banner-highlight">FREE delivery</span>
        </div>
        
        <div class="welcome-text">
            <h2>Welcome Back</h2>
            <p>Enter your credentials to access your account</p>
        </div>
        
        <form id="formAuthentication" method="post" asp-action="Login" asp-controller="Login">
            <div class="input-group">
                <label for="username">Email or Username</label>
                <div class="input-wrapper">
                    <i class="fas fa-user input-icon"></i>
                    <input 
                        type="text" 
                        asp-for="UserName" 
                        id="username" 
                        name="Username" 
                        placeholder="Enter your email or username" 
                        required 
                        autofocus 
                        aria-describedby="username-error" 
                    />
                </div>
                <span id="username-error" asp-validation-for="UserName" class="error-message"></span>
            </div>

            <div class="input-group">
                <div class="label-row">
                    <label for="password">Password</label>
                    <a href="#" class="forgot-password-link">Forgot Password?</a>
                </div>
                <div class="input-wrapper">
                    <i class="fas fa-lock input-icon"></i>
                    <input 
                        type="password" 
                        asp-for="Password" 
                        id="password" 
                        name="password" 
                        placeholder="Enter your password" 
                        required 
                        aria-describedby="password-error" 
                    />
                    <button 
                        type="button" 
                        class="toggle-password" 
                        id="togglePassword" 
                        aria-label="Toggle password visibility"
                    >
                        <i class="fas fa-eye" aria-hidden="true"></i>
                    </button>
                </div>
                <span id="password-error" asp-validation-for="Password" class="error-message"></span>
            </div>

            <div class="form-check">
                <input type="checkbox" id="remember-me" name="remember">
                <label for="remember-me">Remember me</label>
            </div>

            <button type="submit" class="login-button" asp-action="Login">
                <span>Sign In</span>
                <i class="fas fa-arrow-right"></i>
            </button>

            

            <p class="signup-link">Don't have an account? <a asp-action="SignUp" asp-controller="Login">Create account</a></p>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const togglePassword = document.getElementById('togglePassword');
            const passwordField = document.getElementById('password');
            
            togglePassword.addEventListener('click', function() {
                const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordField.setAttribute('type', type);
                
                // Toggle icon
                const icon = this.querySelector('i');
                icon.classList.toggle('fa-eye');
                icon.classList.toggle('fa-eye-slash');
            });
        });
    </script>
</body>
</html>