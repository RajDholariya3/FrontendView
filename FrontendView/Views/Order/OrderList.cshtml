@model List<FrontendView.Model.OrderModel>

@{
    ViewData["Title"] = "Order Management | Stunning UI";
}

<style>
    /* Global Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 90%;
        margin: auto;
    }

    h2 {
        text-align: center;
        font-size: 28px;
        font-weight: 600;
        color: #333;
        margin-bottom: 20px;
    }

    /* Table Styling */
    table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 15px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    th {
        background: #007bff;
        color: white;
        text-transform: uppercase;
    }

    tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    .status {
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .status-pending {
        background-color: #ffcc00;
        color: black;
    }

    .status-completed {
        background-color: #28a745;
        color: white;
    }

    .status-cancelled {
        background-color: #dc3545;
        color: white;
    }

    /* Order Details Modal */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(5px);
        animation: fadeIn 0.3s ease-in-out;
    }

    .modal-content {
        background: white;
        margin: 10% auto;
        padding: 20px;
        width: 40%;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        position: relative;
        transform: scale(0.8);
        opacity: 0;
        transition: all 0.3s ease-in-out;
    }

    .modal.show .modal-content {
        transform: scale(1);
        opacity: 1;
    }

    .close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 22px;
        cursor: pointer;
        color: #888;
    }

    .close:hover {
        color: red;
    }

    /* Loader Animation */
    .loader {
        display: none;
        border: 5px solid #f3f3f3;
        border-radius: 50%;
        border-top: 5px solid #007bff;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 20px auto;
    }

   
</style>

<div class="container">
    <h2>📦 Order Management</h2>

    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User Name</th>
                <th>Order Date</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr data-id="@order.OrderId">
                    <td>@order.OrderId</td>
                    <td>@order.UserName</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>$@order.TotalAmount</td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Order Details Modal -->
<div id="orderModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div class="loader"></div>
        <div id="orderDetails" style="display: none;"></div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("tbody tr").click(function () {
                var orderId = $(this).data("id");

                $("#orderModal").fadeIn().addClass("show");
                $(".loader").show();
                $("#orderDetails").hide();

                $.ajax({
                    url: "http://localhost:5012/api/Orders/" + orderId,
                    type: "GET",
                    success: function (data) {
                        if (data) {
                            var detailsHtml = `
                                <h2>Order Details</h2>
                                <p><strong>Order Number:</strong> ${data.OrderNumber}</p>
                                <p><strong>User:</strong> ${data.UserName}</p>
                                <p><strong>Order Date:</strong> ${data.OrderDate}</p>
                                <p><strong>Total Amount:</strong> $${data.TotalAmount}</p>
                                <p><strong>Status:</strong> <span class="status ${data.Status.toLowerCase() == "pending" ? "status-pending" : data.Status.toLowerCase() == "completed" ? "status-completed" : "status-cancelled"}">${data.Status}</span></p>
                            `;

                            $("#orderDetails").html(detailsHtml).fadeIn();
                        } else {
                            $("#orderDetails").html("<p>Order details not found.</p>").fadeIn();
                        }
                        $(".loader").hide();
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX Error:", status, error);
                        $("#orderDetails").html("<p>Error fetching order details.</p>").fadeIn();
                        $(".loader").hide();
                    }
                });
            });

            $(".close").click(function () {
                $("#orderModal").fadeOut().removeClass("show");
            });

            $(window).click(function (event) {
                if (event.target.id === "orderModal") {
                    $("#orderModal").fadeOut().removeClass("show");
                }
            });
        });
    </script>
}
